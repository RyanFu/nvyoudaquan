      <% if current_user %>
          <li>欢迎：<a href="<%= user_url(current_user) %>"><i class="icon-user"></i><%= current_user.nickname %></a></li>
          <li><a href="<%= logout_url %>"><i class="icon-off"></i>退出</a></li>
